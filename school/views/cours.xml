<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- LIST VIEW -->
    <record id="view_school_cours_list" model="ir.ui.view">
        <field name="name">brains.cours.list</field>
        <field name="model">brains.cours</field>
        <field name="arch" type="xml">
            <list string="Courses" default_order="name asc">
                <field name="name"/>
                <field name="code"/>
                <field name="level_id"/>
                <field name="semester_id"/>
                <field name="cursus_id"/>
                <field name="specialty_id"/>
                <field name="years_id"/>
                <field name="responsible_id"/>
                <field name="type_cours"/>
                <field name="credits"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_school_cours_form" model="ir.ui.view">
        <field name="name">brains.cours.form</field>
        <field name="model">brains.cours</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <group string="General Information">
                        <field name="name"/>
                        <field name="code"/>
                        <field name="type_cours"/>
                        <field name="credits"/>
                        <field name="active"/>
                    </group>
                    <group string="Classification">
                        <field name="years_id" domain="[('active','=',True)]"/>
                        <field name="semester_id" domain="[('year_ids','=',years_id)]"/>
                        <field name="cursus_id" />
                        <field name="specialty_id" />
                        <field name="level_id" />
                    </group>
                    <group string="Details">
                        <field name="responsible_id" domain="[('is_teacher','=',True)]"/>
                        <field name="description" nolabel="1" widget='html'/>
                    </group>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>


    <!-- SEARCH VIEW -->
    <record id="view_school_cours_search" model="ir.ui.view">
        <field name="name">brains.cours.search</field>
        <field name="model">brains.cours</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="level_id"/>
                <field name="semester_id"/>
                <field name="cursus_id"/>
                <field name="years_id"/>
                <field name="responsible_id"/>
                <field name="type_cours"/>
                <field name="credits"/>
                <field name="active"/>

                <!-- Filtres -->
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active','=',False)]"/>
                <filter string="By Year" name="filter_by_year" domain="[]" context="{'group_by':'years_id'}"/>
                <filter string="By Cursus" name="filter_by_cursus" domain="[]" context="{'group_by':'cursus_id'}"/>
                <filter string="By Level" name="filter_by_level" domain="[]" context="{'group_by':'level_id'}"/>
                <filter string="By Semester" name="filter_by_semester" domain="[]" context="{'group_by':'semester_id'}"/>
                <filter string="By Responsible" name="filter_by_responsible" domain="[]" context="{'group_by':'responsible_id'}"/>

            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_school_cours" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">brains.cours</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_school_cours_list"/>
        <field name="search_view_id" ref="view_school_cours_search"/>
        <field name="context">{'search_default_active': 1, 'group_by': ['cursus_id','years_id']}</field>
    </record>   

    <!-- MENU ITEM -->
    

</odoo>