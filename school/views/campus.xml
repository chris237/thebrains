                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <!-- Kanban Campus -->
    <record id="view_campus_kanban" model="ir.ui.view">
        <field name="name">brains.campus.kanban</field>
        <field name="model">brains.campus</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="address"/>
                <field name="faculty_ids"/>
                <field name="longitude"/>
                <field name="latitude"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record">
                            <!-- En-t√™te -->
                            <div class="o_kanban_header">
                                <strong><field name="name"/></strong>
                            </div>
                            
                            <!-- D√©tails -->
                            <div class="o_kanban_details">
                                <div><span class="o_label">Adresse :</span> <field name="address"/></div>
                                <div><span class="o_label">Facult√©s :</span> 
                                    <field name="faculty_ids" widget="many2many_tags"/>
                                </div>
                                <div>
                                    <t t-if="record.longitude.raw_value and record.latitude.raw_value">
                                        üåç [<t t-esc="record.longitude.value"/> , <t t-esc="record.latitude.value"/>]
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

