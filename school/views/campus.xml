     <!-- Kanban Faculty -->
    <record id="view_faculte_kanban" model="ir.ui.view">
        <field name="name">brains.faculty.kanban</field>
        <field name="model">brains.faculty</field>
        <field name="arch" type="xml">
            <!-- <kanban default_group_by="campus_id"> -->
            <kanban>
                <field name="name"/>
                <field name="campus_id"/>
                <field name="employee_id"/>
                <field name="employee_email"/>
                <field name="employee_phone"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record">
                            <!-- En-t√™te -->
                            <div class="o_kanban_header">
                                <strong><field name="name"/></strong>
                            </div>

                            <!-- D√©tails -->
                            <div class="o_kanban_details">
                                <div><span class="o_label">Campus :</span> <field name="campus_id"/></div>
                                <div><span class="o_label">Responsable :</span> <field name="employee_id"/></div>
                                <div><span class="o_label">Email :</span> <field name="employee_email"/></div>
                                <div><span class="o_label">T√©l√©phone :</span> <field name="employee_phone"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue de recherche (Filtres + Group By) -->
    <record id="view_faculte_search" model="ir.ui.view">
        <field name="name">brains.faculty.search</field>
        <field name="model">brains.faculty</field>
        <field name="arch" type="xml">
            <search>
                <!-- Champs recherchables -->
                <field name="name" string="Faculty"/>
                <field name="campus_id" string="Campus"/>
                <field name="employee_id" string="Responsable"/>
                <field name="employee_email" string="Email"/>
                <field name="employee_phone" string="T√©l√©phone"/>

                <!-- Filtres -->
                <filter name="filter_by_email" string="Avec Email" domain="[('employee_email','!=',False)]"/>
                <filter name="filter_no_email" string="Sans Email" domain="[('employee_email','=',False)]"/>

                <!-- Group By -->
                <group expand="0" string="Regrouper par">
                    <filter name="group_by_campus" string="Campus"
                            context="{'group_by':'campus_id'}"/>
                    <filter name="group_by_responsable" string="Responsable"
                            context="{'group_by':'employee_id'}"/>
                </group>
            </search>
        </field>
    </record>

