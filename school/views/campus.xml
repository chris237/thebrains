        </field>
    </record>

    <!-- Formulaire Campus -->
    <record id="view_campus_form" model="ir.ui.view">
        <field name="name">brains.campus.form</field>
        <field name="model">brains.campus</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Informations">
                        <field name="name"/>
                        <field name="address"/>
                        <field name="longitude"/>
                        <field name="latitude"/>
                    </group>
                    <!-- <group>
