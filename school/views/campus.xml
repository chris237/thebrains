                        <field name="deputy_director_id"/>
                    </group> -->
                    <notebook>
                        <page string="Affectations">
                            <field name="employee_ids">
                                <list editable="bottom">
                                    <field name="employee_id"/>
                                    <field name="position_id"/>
                                </list>
