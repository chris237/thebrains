<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_brains_level_list" model="ir.ui.view">
            <field name="name">brains.level.list</field>
            <field name="model">brains.level</field>
            <field name="arch" type="xml">
                <list string="Levels" create="false">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="years_level"/>
                    <field name="cursus_id"/>
                </list>
            </field>
        </record>

        <record id="view_brains_level_form" model="ir.ui.view">
            <field name="name">brains.level.form</field>
            <field name="model">brains.level</field>
            <field name="arch" type="xml">
                <form string="Level">
                    <header>
                        <button name="desactivate" string="Set Inactive" type="object" class="oe_highlight" invisible="state != 'active'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,active,inactive"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="years_level"/>
                            <field name="cursus_id"/>
                            <field name="year_ids" 
                                   widget="many2many_tags" 
                                   options="{'no_create': True}" 
                                   context="{'form_view_ref': 'school.view_school_year_form'}"
                                   readonly ="1"/>
                        </group>
                        <notebook>
                            <page string="Semesters" name="page_semesters">
                                <field name="semester_ids" widget="one2many_list">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="description"/>
                                        <field name="level_id"/>
                                        <field name="cursus_id"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter reload_on_follower="True"/>
                </form>
            </field>
        </record>

        <record id="action_brains_level" model="ir.actions.act_window">
            <field name="name">Levels</field>
            <field name="res_model">brains.level</field>
            <field name="view_mode">list,form</field>
        </record>

        
    </data>
</odoo>
    