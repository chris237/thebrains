<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Liste Employé -->
    <record id="view_employee_list" model="ir.ui.view">
        <field name="name">brains.employee.list</field>
        <field name="model">brains.employee</field>
        <field name="arch" type="xml">
            <list>
                <field name="honorific"/>
                <field name="name"/>
                <field name="prename"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="position_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <!-- Formulaire Employé -->
    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">brains.employee.form</field>
        <field name="model">brains.employee</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Informations">
                        <field name="honorific"/>
                        <field name="name"/>
                        <field name="prename"/>
                    </group>
                    <group string="Contacts">
                        <field name="email"/>
                        <field name="phone"/>
                    </group>
                    <group string="Details">
                        <field name="position_ids" widget="many2many_tags"/>
                        <field name="is_teacher"/>
                    </group>
                    <notebook>
                        <page string="Affectations">
                            <field name="campus_affectation_ids">
                                <list editable="bottom">
                                    <field name="campus_id"/>
                                    <field name="position_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <!-- Kanban Employé -->
    <record id="view_employee_kanban" model="ir.ui.view">
        <field name="name">brains.employee.kanban</field>
        <field name="model">brains.employee</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="honorific"/>
                <field name="name"/>
                <field name="position_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record">
                            <strong><field name="honorific"/> <field name="name"/></strong>
                            <div><field name="position_ids" widget="many2many_tags"/></div>
                            <div><field name="email"/></div>
                            <div><field name="phone"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- Vue de recherche (Filtres + Group By) -->
    <record id="view_employee_search" model="ir.ui.view">
        <field name="name">brains.employee.search</field>
        <field name="model">brains.employee</field>
        <field name="arch" type="xml">
            <search>
                <!-- Champs recherchables -->
                <field name="name" string="Nom"/>
                <field name="prename" string="Prénom"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="position_ids" string="Postes"/>

                <!-- Filtres -->
                <filter name="filter_teacher" string="Enseignants" domain="[('is_teacher','=',True)]"/>
                <filter name="filter_staff" string="Personnel" domain="[('is_teacher','=',False)]"/>

                <!-- Group By -->
                <group expand="0" string="Regrouper par">
                    <filter name="group_by_position" string="Poste"
                            context="{'group_by':'position_ids'}"/>
                    <filter name="group_by_teacher" string="Type"
                            context="{'group_by':'is_teacher'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_employee" model="ir.actions.act_window">
        <field name="name">Employee</field>
        <field name="res_model">brains.employee</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="view_id" ref="view_employee_list"/>
        <field name="search_view_id" ref="view_employee_search"/>
    </record>

    <!-- action employee who is teacher -->
    <record id="action_employee_teacher" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">brains.employee</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="view_id" ref="view_employee_list"/>
        <field name="search_view_id" ref="view_employee_search"/>
        <field name="domain">[('is_teacher','=',True)]</field>
        </record>

    <record id="employee_inherit_view_form" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.school</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <field name="work_phone" position="after">
                <field name="is_teacher"/>
                <field name="is_student"/>
            </field>    

            <xpath expr="//sheet/notebook" position="inside">
                <page string="Affectations" invisible="is_teacher != True">
                    <field name="campus_affectation_ids">
                        <list editable="bottom">
                            <field name="employee_id"/>
                            <field name="campus_id"/>
                            <field name="position_id"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
        </record>   

    <!-- Menus-->
    <!-- <menuitem id="menu_brains_employee" name="Employes" parent="menu_brains_root" action="action_employee"/> -->

    <!-- action employee who is teacher -->
    <record id="open_view_employee_list_my" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">hr.employee</field>
        <field name="domain">[('company_id', 'in', allowed_company_ids),('is_teacher','=',True)]</field>
        <field name="context">{'chat_icon': True}</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="hr.view_employee_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new employee
            </p><p>
                Quickly find all the information you need for your employees such as contact data, job position, availability, etc.
            </p>
        </field>
    </record>

    <!-- Action employee who is Student -->
    <record id="open_view_student_list_my" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">hr.employee</field>
        <field name="domain">[('company_id', 'in', allowed_company_ids),('is_student','=',True)]</field>
        <field name="context">{'chat_icon': True}</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="hr.view_employee_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new student
            </p><p>
                Quickly find all the information you need for your Students such as contact data, job position, availability, etc.
            </p>
        </field>
    </record>

    <record id="act_hr_employee_kanban_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
        <field name="view_mode">kanban</field>
        <field name="act_window_id" ref="open_view_student_list_my"/>
    </record>

    <record id="act_hr_employee_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="15"/>
        <field name="view_mode">list</field>
        <field name="act_window_id" ref="open_view_student_list_my"/>
    </record>


    <record id="act_hr_employee_kanban_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
        <field name="view_mode">kanban</field>
        <field name="act_window_id" ref="open_view_employee_list_my"/>
    </record>

    <record id="act_hr_employee_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="15"/>
        <field name="view_mode">list</field>
        <field name="act_window_id" ref="open_view_employee_list_my"/>
    </record>

</odoo>